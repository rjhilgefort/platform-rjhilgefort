{
  "name": "platform-rjhilgefort",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build --filter=docs^... && changeset publish",
